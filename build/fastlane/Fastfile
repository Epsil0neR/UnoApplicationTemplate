# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Upload iOS Application to TestFairy"
  lane :upload_testfairy do
	testfairy(
		api_key: ENV['testFairyApiKey'],
		ipa: ENV['ipaFile'],
		symbols_file: ENV['symbolsFile'],
		comment: ENV['releasesNotes'],
		auto_update: ENV['auto_update'],
		notify: ENV['notify']
	)
	end
end

platform :android do
  desc "Upload Android Application to TestFairy"
  lane :upload_testfairy do
	testfairy(
		api_key: ENV['testFairyApiKey'],
		apk: ENV['apkFile'],
		comment: ENV['releasesNotes'],
		auto_update: ENV['auto_update'],
		notify: ENV['notify']
	)
	end
end
