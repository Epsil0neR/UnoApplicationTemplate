	<!-- CirclePathControlStyle -->
	<Style x:Key="CirclePathControlStyle"
		   TargetType="u:PathControl">
		<Setter Property="Foreground"
				Value="{StaticResource MaterialSurfaceBrush}" />
		<Setter Property="Stretch"
				Value="Uniform" />
		<Setter Property="Height"
				Value="4" />
		<Setter Property="Width"
				Value="4" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="u:PathControl">
					<Path Data="M-4,0a4,4 0 1,0 8,0a4,4 0 1,0 -8,0"
						  Stretch="{TemplateBinding Stretch}"
						  Width="{TemplateBinding Width}"
						  Height="{TemplateBinding Height}"
						  Fill="{TemplateBinding Foreground}"
						  HorizontalAlignment="Stretch" />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

