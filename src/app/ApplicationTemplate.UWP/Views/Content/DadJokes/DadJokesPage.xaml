<Page x:Class="ApplicationTemplate.Views.Content.DadJokesPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:dl="using:Chinook.DataLoader"
	  xmlns:ue="using:Nventive.View.Extensions"
	  xmlns:u="using:Nventive.View.Controls"
	  mc:Ignorable="d">

	<Page.Resources>
		<DataTemplate x:Key="QuotesEmptyTemplate">
			<Grid>

				<StackPanel VerticalAlignment="Center"
							HorizontalAlignment="Stretch"
							Visibility="{Binding Request.Context[SearchTerm], Converter={StaticResource EmptyStringToCollapsed}, FallbackValue=Collapsed}">

					<TextBlock Text="No results found for"
							   HorizontalAlignment="Center"
							   Style="{StaticResource MaterialBody1}" />
				</StackPanel>
			</Grid>
		</DataTemplate>
	</Page.Resources>

	<Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<CommandBar Content="Jokes"
					x:Uid="DadJokesPage_CommandBar">
			<CommandBar.PrimaryCommands>
				<AppBarButton Command="{Binding NavigateToFilters}">
					<PathIcon Data="M10 18H14V16H10V18ZM3 6V8H21V6H3ZM6 13H18V11H6V13Z"
							  HorizontalAlignment="Center"
							  Foreground="white"/>
				</AppBarButton>
			</CommandBar.PrimaryCommands>
		</CommandBar>

		<dl:DataLoaderView Source="{Binding Quotes}"
						   EmptyTemplate="{StaticResource QuotesEmptyTemplate}"
						   Grid.Row="2">
			<DataTemplate>
				<u:SwipeRefresh RefreshCommand="{Binding Parent.RefreshQuotes}"
								IsRefreshing="{Binding Parent.RefreshQuotes.IsExecuting}"
								IndicatorColor="Black">
					<ListView ItemsSource="{Binding Data}"
							  Header="{Binding}">
						<ListView.ItemTemplate>
							<DataTemplate>
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="Auto" />
										<ColumnDefinition Width="60" />
									</Grid.ColumnDefinitions>

									<TextBlock Text="{Binding Quote.Value}"
											   Style="{StaticResource MaterialBody1}" />

									<TextBlock Text="{Binding IsFavorite}"
											   Grid.Column="1"
											   Margin="4,0,0,0"
											   Style="{StaticResource MaterialCaption}" />

									<ToggleButton IsChecked="{Binding IsFavorite}"
												  Command="{Binding Parent.ToggleIsFavorite}"
												  CommandParameter="{Binding}"
												  HorizontalAlignment="Center"
												  Grid.Column="2" />
								</Grid>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
				</u:SwipeRefresh>
			</DataTemplate>
		</dl:DataLoaderView>
	</Grid>
</Page>
