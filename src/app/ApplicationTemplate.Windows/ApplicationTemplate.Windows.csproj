<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows10.0.18362.0</TargetFramework>
		<TargetPlatformMinVersion>10.0.18362.0</TargetPlatformMinVersion>
		<RootNamespace>ApplicationTemplate.Windows</RootNamespace>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<Platforms>x86;x64;arm64</Platforms>
		<RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64</RuntimeIdentifiers>
		<PublishProfile>win10-$(Platform).pubxml</PublishProfile>
		<UseWinUI>true</UseWinUI>
		<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
		<DefineConstants>$(DefineConstants);WINUI</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.1.3" />
		<PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.22000.196" />
		<PackageReference Include="System.Reflection.TypeExtensions" Version="4.7.0" />
		<PackageReference Include="System.Collections" Version="4.3.0" />
		<PackageReference Include="System.Runtime.Handles" Version="4.3.0" />
		<PackageReference Include="System.IO.FileSystem.Primitives" Version="4.3.0" />
		<PackageReference Include="System.Runtime.InteropServices" Version="4.3.0" />
		<PackageReference Include="MessageDialogService.Uno.WinUI" Version="0.5.0-dev.52" />
		<PackageReference Include="Uno.Toolkit.WinUI" Version="2.3.0-dev.6" />
		<PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
		<PackageReference Include="Reactive.Annex.Uno.WinUI" Version="0.5.0-dev.39" />
		<PackageReference Include="Uno.Material.WinUI" Version="2.3.0-dev.6" />
		<PackageReference Include="Uno.WinUI" Version="4.4.13" />
		<PackageReference Include="Chinook.DynamicMvvm.Uno.WinUI" Version="1.1.0" />
		<PackageReference Include="Chinook.BackButtonManager.Uno.WinUI" Version="1.1.1" />
		<PackageReference Include="Chinook.SectionsNavigation.Uno.WinUI" Version="1.1.0" />
		<PackageReference Include="Chinook.DataLoader.Uno.WinUI" Version="1.1.0" />
		<PackageReference Include="ExtendedSplashScreen.Uno.WinUI" Version="0.3.0-dev.38" />
		<PackageReference Include="Nventive.Persistence.Uno.WinUI" Version="0.2.0-dev.26" />
		<PackageReference Include="Nventive.View.Uno.WinUI" Version="0.4.1-feature.dotnet6.53" />

		<Manifest Include="$(ApplicationManifest)" />
	</ItemGroup>
	
	<ItemGroup>
		<Compile Include="..\ApplicationTemplate.UWP\App.xaml.cs" />
		<ApplicationDefinition Include="..\ApplicationTemplate.UWP\App.xaml" Link="App.xaml" Visible="False" />
		<Page Include="..\ApplicationTemplate.UWP\Views\**\*.xaml" Visible="False">
			<Link>Views\%(RecursiveDir)%(FileName)%(Extension)</Link>
			<SubType>Designer</SubType>
			<Generator>MSBuild:Compile</Generator>
		</Page>
		<Compile Include="..\ApplicationTemplate.UWP\Views\**\*.cs" Visible="False">
			<Link>Views\%(RecursiveDir)%(FileName)%(Extension)</Link>
		</Compile>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)'!='net6.0-windows10.0.18362'">
		<Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
		<Compile Update="**\*.xaml.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
	</ItemGroup>
	
	<ItemGroup>
