<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Styles  -->
    <Style
        x:Key="TextBoxStyle"
        BasedOn="{StaticResource OutlinedTextBoxStyle}"
        TargetType="TextBox">

        <Setter Property="MinHeight" Value="56" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceMediumBrush}" />
        <Setter Property="Background" Value="{ThemeResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource OnSurfaceLowBrush}" />
        <Setter Property="SelectionHighlightColor" Value="{ThemeResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="0.5" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <!--  Default Style  -->
    <Style BasedOn="{StaticResource TextBoxStyle}" TargetType="TextBox" />
</ResourceDictionary>
